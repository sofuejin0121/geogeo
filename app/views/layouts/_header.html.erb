<header class="bg-gray-800 text-white fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <%= link_to 'GEOGEO!', root_path, class: 'text-xl font-bold' %>

      <button class="lg:hidden focus:outline-none" type="button" aria-controls="mobile-menu" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <nav class="hidden lg:flex space-x-4">
        <%= link_to 'Home', root_path, class: 'hover:text-gray-300' %>
        <%= link_to 'Help', help_path, class: 'hover:text-gray-300' %>
        <% if logged_in? %>
          <%= link_to 'Users', users_path, class: 'hover:text-gray-300' %>
          <div class="relative group">
            <button class="flex items-center hover:text-gray-300">
              Account
              <svg class="ml-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden group-hover:block">
              <%= link_to 'Profile', current_user, class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
              <%= link_to 'Settings', edit_user_path(current_user),
                          class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
              <div class="border-t border-gray-100"></div>
              <%= link_to 'Log out', logout_path, data: { 'turbo-method': :delete },
                                                  class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
            </div>
          </div>
          <%= link_to 'Notice', notifications_path,
                      class: "hover:text-gray-300 #{'text-yellow-400' if unchecked_notifications.any?}" %>
        <% else %>
          <%= link_to 'Log in', login_path, class: 'hover:text-gray-300' %>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="lg:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <%= link_to 'Home', root_path, class: 'block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700' %>
      <%= link_to 'Help', help_path, class: 'block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700' %>
      <% if logged_in? %>
        <%= link_to 'Users', users_path, class: 'block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700' %>
        <%= link_to 'Profile', current_user, class: 'block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700' %>
        <%= link_to 'Settings', edit_user_path(current_user),
                    class: 'block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700' %>
        <%= link_to 'Log out', logout_path, data: { 'turbo-method': :delete },
                                            class: 'block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700' %>
        <%= link_to 'Notice', notifications_path,
                    class: "block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700 #{if unchecked_notifications.any?
                                                                                                   'text-yellow-400'
                                                                                                 end}" %>
      <% else %>
        <%= link_to 'Log in', login_path, class: 'block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700' %>
      <% end %>
    </div>
  </div>
</header>
