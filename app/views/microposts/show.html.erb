<ol class="microposts">
  <%= render partial: 'microposts/micropost', locals: { micropost: @micropost } %>
</ol>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
  <div class="be-comment-block">
    <h1 class="comments-title">コメント件数 : <%= @micropost.comments.count %></h1>
    <div class="be-comment">
      <% @micropost.comments.each do |comment| %>
        <div class="be-img-comment">
          <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
          <span class="user"><%= link_to comment.user.name, comment.user %></span>
        </div>
        <div class="be-comment-content">
          <span class="be-comment-name">
            <a href="blog-detail-2.html"><%= @micropost.comments.name %></a>
          </span>
          <span class="be-comment-time">
            <i class="fa fa-clock-o"></i>
            <%= comment.created_at.strftime('%Y/%m/%d') %>
          </span>
          <p class="be-comment-text">
            <%= comment.content %>
          </p>
        </div>
      <% end %>
    </div>
    <%= form_with model: [@micropost, @comment] do |f| %>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <%= f.text_area :content, class: 'form-input' %>
          </div>
        </div>
        <%= f.submit 'Search', class: 'btn btn-primary pull-right' %>
      </div>
    <% end %>
  </div>
</div>
