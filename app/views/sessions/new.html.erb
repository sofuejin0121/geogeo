<% provide(:title, 'Log in') %>
<h1 class="text-3xl font-bold text-center mb-6">Log in</h1>

<div class="flex justify-center">
  <div class="w-full max-w-md">
    <%= form_with(url: login_path, scope: :session, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4') do |f| %>

      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.email_field :email,
                          class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= link_to '(forgot password)', new_password_reset_path, class: 'text-blue-500 hover:text-blue-700 text-xs' %>
        <%= f.password_field :password,
                             class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="mb-6">
        <%= f.label :remember_me, class: 'inline-flex items-center' do %>
          <%= f.check_box :remember_me, class: "w-5 h-5" %>
          <span class="ml-2 text-sm text-gray-600">Remember me on this computer</span>
        <% end %>
      </div>

      <%= f.submit 'Log in',
                   class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    <% end %>

    <p class="text-center text-gray-700 text-sm">
      New user? <%= link_to 'Sign up now!', signup_path, class: 'text-blue-500 hover:text-blue-700' %>
    </p>
  </div>
</div>
